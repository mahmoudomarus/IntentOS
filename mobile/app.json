{
  "expo": {
    "name": "Intent OS",
    "slug": "intent-os",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#080812"
    },
    "ios": {
      "supportsTablet": false,
      "backgroundColor": "#080812",
      "bundleIdentifier": "com.intentos.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "voip"
        ],
        "NSMicrophoneUsageDescription": "Intent OS uses the microphone for voice commands.",
        "NSLocationWhenInUseUsageDescription": "Intent OS uses your location for weather and ride requests."
      }
    },
    "android": {
      "package": "com.intentos.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#080812"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-av"
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_EXPO_PROJECT_ID_HERE"
      }
    }
  }
}